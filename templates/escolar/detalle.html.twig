                                			<td><a href="{{ path('detalle_materia', {matricula: profesor.matricula, idCurricula:materia.0.idCurricula }) }}">{{ materia.0.idMateria.nombreMateria }}</a></td>
                                		</tr>
                                	{% else %}
                                		<tr>
                                			<td colspan="1">Sin informaci√≥n</td>
                                		</tr>
                                	{% endfor %}
                                	</tbody>
                                </table>
                            </div>
        				</div>
                    </div>
                </div>
			</div>
		</div>
	</div>
{% endblock %}