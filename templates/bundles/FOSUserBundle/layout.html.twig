{% extends 'base.html.twig' %}

{% block page_title %}
	{{ alumno.nombreCompleto }}
{% endblock %}

{% block page_subtitle %}
	{{ alumno.idGrupo.idOfertaAcademica.nombreOfertaAcademica }}
{% endblock %}

{% block page_content %}
	<div class="conteiner-fluid">
		<div class="row">
			{% for materia in asignacionMaterias %}
				<div class="col-md-4">
					<a href="{{ path('evaluacion', {'idAsignacionMateria': materia.idAsignacionMateria, 'idPregunta': 1, 'matricula': alumno.matricula}) }}">
						<div class="panel panel-primary">
							<div class="panel-body">
								{{ materia.idCurricula.idMateria.nombreMateria }}
							</div>
						</div>
					</a>
				</div>
			{% else %}
				<div class="col-md-12">
					<div class="panel panel-primary">
						<div class="panel-body">
							Este alumno no cuenta con materias
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}