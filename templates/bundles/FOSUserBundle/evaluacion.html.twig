{% extends 'base.html.twig' %}

{% block page_title %}
	{{ asignacionMateria.idCurricula.idMateria.nombreMateria }}
{% endblock %}

{% block page_subtitle %}
	{{ asignacionMateria.profesorMatricula.nombreCompleto }}
{% endblock %}

{% block page_content %}
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-12">
				<div class="panel panel-default">
                	<div class="panel-body">
                    	<div class="panel-content">
							{{ form_start(form) }}
								<div class="row">
									<div class="col-md-12">
										{{ form_label(form.idOpcionPregunta, pregunta.textoPregunta) }}
										{{ form_widget(form.idOpcionPregunta) }}
    								</div>
    							</div>
    							<div class="row">
    								<div class="col-md-12">
    									{{ form_widget(form.save) }}
    								</div>
    							</div>
							{{ form_end(form) }}
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}